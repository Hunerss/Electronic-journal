<UserControl x:Class="Electronic_journal.UserControls.Admin.Admin_LessonsMenu_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Electronic_journal.UserControls.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem x:Name="addt_menuItem" Header="Add Lesson" Click="Add_menuItem_Click" />
            <MenuItem x:Name="remove_menuItem" Header="Remove Lesson" Click="Remove_menuItem_Click" />
            <MenuItem x:Name="modify_menuItem" Header="Modify Lesson" Click="Modify_menuItem_Click" />
        </Menu>
        <TextBlock Grid.Row="1" Margin="10" Text="Lessons" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="1">
                <Grid>
                    <!--All lessons are shown here and we have options to sort it by name, year, students number and all class have all the students listed and sorted by surname-->
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
