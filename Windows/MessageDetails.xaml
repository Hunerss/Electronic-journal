<Window x:Class="Electronic_journal.MessageDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Electronic_journal"
        mc:Ignorable="d"
        Title="MessageDetails" Height="450" Width="800">
    <Grid>
        <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold" Margin="10"/>
        <TextBlock Text="{Binding Author}" FontSize="16" Margin="10,40,10,0"/>
        <TextBlock Text="{Binding Target}" FontSize="16" Margin="10,70,10,0"/>
        <TextBlock Text="{Binding Content}" FontSize="14" Margin="10,100,10,10"/>
    </Grid>
</Window>
